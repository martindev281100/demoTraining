@model IEnumerable<demoTraining.Models.Staff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Staffs</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new{@class="btn btn-default"})
</p>
<table class="table">
    <tr>
        <th>
            Staff Name
        </th>
        <th>
            DOB
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StaffName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StaffEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StaffPhone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StaffID },new{@class="btn btn-warning"})
            @Html.ActionLink("Details", "Details", new { id=item.StaffID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "Delete", new { id=item.StaffID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

@model demoTraining.Models.Trainee

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profile</h2>

<div>
    <h4>Trainee</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TraineeName)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TraineeEmail)
        </dd>

        <dt>
            DOB: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOB)
        </dd>

        <dt>
            Education:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Education)
        </dd>

        <dt>
            Main Programming Language:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProgrammingLanguage)
        </dd>

        <dt>
            Toeic Score:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ToeicScore)
        </dd>

        <dt>
            Address:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TraineeID }, new {@class="btn btn-primary"}) |
    @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-default"})
</p>

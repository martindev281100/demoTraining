@model IEnumerable<demoTraining.Models.Trainee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Trainees</h2>

    @using (Html.BeginForm())
    {

        @Html.ActionLink("Create New Trainee", "Create", null, new { @class = "btn btn-default" })

        <div class="form-group navbar-right">
            @Html.TextBox("SearchString", null,new { @class = "form-control", @placeholder = "Search" })
        </div>

        <button class="btn btn-default navbar-right" type="submit"><span class="glyphicon glyphicon-search"></span></button>

    }

<table class="table table-striped">
    <tr>
        <th>
            @Html.ActionLink("Trainee Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            <p>Email</p>
        </th>
        <th>
            <p>DOB</p>
        </th>
        <th>
            <p>Education</p>
        </th>
        <th>
            <p>Programming Language</p>
        </th>
        <th>
            @Html.ActionLink("Toeic Score", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            <p>Address</p>
        </th>
        <th>
            <p>Actions</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgrammingLanguage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToeicScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TraineeID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "Delete", new { id = item.TraineeID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

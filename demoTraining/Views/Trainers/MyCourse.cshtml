@model IEnumerable<demoTraining.Models.TrainerEnrollment>

@{
    ViewBag.Title = "MyCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MyCourse</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Trainer.TrainerName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Topic.TopicName)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Trainer.TrainerName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Topic.TopicName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.TrainerID}) |
            @Html.ActionLink("Details", "Details", new {id = item.TrainerID}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.TrainerID})
        </td>
    </tr>
}

</table>
